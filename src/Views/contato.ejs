<%- include('partials/head') %>

    <%- include('partials/nav') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8">
                <h1 class="text-center">Contato</h1>
                <p class="text-center lead">Crie ou edite o seu contato</p>

                <%- include('partials/messages') %>

                <% if (contato._id) { %>
                    <form method="POST" action="/contato/<%= contato._id %>">
                <% } else { %>
                    <form method="POST" action="/contato">
                <% } %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" value="<%= contato.name %>">
                    </div>
                    <div class="mb-3">
                        <label for="subname" class="form-label">Sobrenome</label>
                        <input type="text" class="form-control" name="subname" value="<%= contato.subname %>">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" value="<%= contato.email %>">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Telefone</label>
                        <input type="text" class="form-control" name="phone" value="<%= contato.phone %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Save Contact</button>
                </form>

            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('partials/footer') %>